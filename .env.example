# Flask設定
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters_recommended

# Google API設定
# credentials.jsonファイルをプロジェクトルートに配置してください

# OAuth設定
# 開発環境でHTTPを使用する場合のみ '1' に設定（本番環境では '0' または未設定）
OAUTHLIB_INSECURE_TRANSPORT=1

# 本番環境設定
FLASK_ENV=production
DEBUG=False

# セキュリティ設定
# 本番環境では以下を設定してください：
# - HTTPS必須（OAUTHLIB_INSECURE_TRANSPORT=0）
# - セキュリティヘッダー設定
# - アクセスログ設定